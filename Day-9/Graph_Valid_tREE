class Solution {
    public boolean validTree(int n, int[][] edges) {

        List<List<Integer>>graph=new ArrayList<>();
        boolean visited[]=new boolean[n];

        for(int i=0;i<n;i++) {
            graph.add(new ArrayList<Integer>());
        }

        for(int a[]:edges) {
            int node1=a[0];
            int node2=a[1];
            graph.get(node1).add(node2);
            graph.get(node2).add(node1);
        }

        //int connected_components=0;

        if(hascycle(visited,0,-1,graph)) {
            return false;
        }

        for(int i=0;i<n;i++) {
            if(!visited[i]) {
                return false;
            }
        }

        return true;

    }

    public boolean hascycle(boolean visited[],int node,int parent,List<List<Integer>>graph) {
        visited[node]=true;

        for(int nei:graph.get(node)) {
            if(nei==parent) {
                continue;
            }
            if(visited[nei]) {
                return true;
            }
            if(hascycle(visited,nei,node,graph)) {
                return true;
            }
        }
        return false;
    }
}
